<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.property.NewProperty">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/newPropertyToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar"
        app:theme="@style/ToolBarStyle"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="@string/type_of_property"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edtType"
        app:layout_constraintTop_toBottomOf="@id/newPropertyToolbar"/>

    <EditText
        android:id="@+id/edtType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/choose_a_property_type"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/newPropertyToolbar"
        app:layout_constraintStart_toEndOf="@+id/txtType"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:text="@string/address_of_the_property"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/txtType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edtAddress"/>

    <EditText
        android:id="@+id/edtAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="@string/choose_a_property_address"
        app:layout_constraintStart_toEndOf="@id/txtAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtAddress"
        app:layout_constraintBottom_toBottomOf="@id/txtAddress" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:text="@string/price_of_property"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edtPrice"
        app:layout_constraintTop_toBottomOf="@id/txtAddress" />

    <EditText
        android:id="@+id/edtPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="@string/choose_price_for_property"
        app:layout_constraintStart_toEndOf="@id/txtPrice"
        app:layout_constraintTop_toTopOf="@id/txtPrice"
        app:layout_constraintBottom_toBottomOf="@id/txtPrice"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtSurface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:text="@string/surface_of_property"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edtSurface"
        app:layout_constraintTop_toBottomOf="@id/txtPrice"/>

    <EditText
        android:id="@+id/edtSurface"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="@string/choose_surface_of_property"
        app:layout_constraintStart_toEndOf="@id/txtSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtSurface"
        app:layout_constraintBottom_toBottomOf="@id/txtSurface"/>

    <TextView
        android:id="@+id/txtRoomCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:text="@string/numberOfRooms"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edtRoomCount"
        app:layout_constraintTop_toBottomOf="@id/txtSurface"/>

    <EditText
        android:id="@+id/edtRoomCount"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="10dp"
        android:hint="@string/choose_number_of_rooms"
        app:layout_constraintBottom_toBottomOf="@+id/txtRoomCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtRoomCount"
        app:layout_constraintTop_toTopOf="@+id/txtRoomCount" />

    <TextView
        android:id="@+id/txtBathroomsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:text="@string/numberOfBathrooms"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edtBathroomsCount"
        app:layout_constraintTop_toBottomOf="@id/txtRoomCount"/>

    <EditText
        android:id="@+id/edtBathroomsCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="@string/choose_number_of_bathrooms"
        app:layout_constraintStart_toEndOf="@+id/txtBathroomsCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtBathroomsCount"
        app:layout_constraintBottom_toBottomOf="@+id/txtBathroomsCount"/>


    <TextView
        android:id="@+id/txtBedroomsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:text="@string/NumberOfBedrooms"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edtBedroomsCount"
        app:layout_constraintTop_toBottomOf="@id/txtBathroomsCount"/>

    <EditText
        android:id="@+id/edtBedroomsCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="@string/choose_number_of_bedrooms"
        app:layout_constraintStart_toEndOf="@+id/txtBedroomsCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtBedroomsCount"
        app:layout_constraintBottom_toBottomOf="@+id/txtBedroomsCount"/>


    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:text="@string/Description"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edtDescription"
        app:layout_constraintTop_toBottomOf="@id/txtBedroomsCount"/>

    <EditText
        android:id="@+id/edtDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="@string/describe_the_property"
        app:layout_constraintStart_toEndOf="@+id/txtDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtDescription"
        app:layout_constraintBottom_toBottomOf="@+id/txtDescription"/>


    <TextView
        android:id="@+id/txtImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:text="@string/select_a_picture_for_property"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDescription"/>

    <ImageButton
        android:id="@+id/imgButtonSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:background="@color/design_default_color_background"
        android:layout_marginTop="20dp"
        android:src="@drawable/select_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDescription" />


    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:text="@string/status_of_property"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtImage"/>

    <TextView
        android:id="@+id/txtSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_sold_sold"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSwitch"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Switch
        android:id="@+id/buttonSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        style="@style/SwitchCompatTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/txtStatus"
        app:layout_constraintTop_toTopOf="@id/txtStatus"/>


    <TextView
        android:id="@+id/txtEntryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:text="@string/entry_date"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtStatus"/>

    <TextView
        android:id="@+id/txtAgent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:text="@string/agent"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtEntryDate"/>



</androidx.constraintlayout.widget.ConstraintLayout>